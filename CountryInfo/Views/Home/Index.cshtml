@{
    ViewBag.Title = "CountryInfo";
}


<h2>
    Enter the name of the country in the field below to get information about it.
</h2>
<label>@ViewBag.Message</label>
<div class="row">
    <div class="col-md-4">
        @using (Ajax.BeginForm("GetInfoAboutCountry", "Home", FormMethod.Post, new AjaxOptions { UpdateTargetId = "result" }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-8">
                <input type="text" name="countryName" class="form-control" />
            </div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-default" value="Get information" />
            </div>
        }
    </div>
    <div class="col-md-2">
        @using (Ajax.BeginForm("GetListOfCountries", "Home", FormMethod.Post, new AjaxOptions { UpdateTargetId = "result" }, new { @class = "form-horizontal", role = "form" }))
        {
            <input type="submit" class="btn btn-default" value="Get list of countries" />
        }
    </div>
</div>
<div id="result"></div>
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")